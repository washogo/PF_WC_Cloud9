<%= render 'layouts/after_sign_in_nav' %>
<div class="container">
  <div class="row m-5">
    <div class="col offset-md-4">
      <h2>プロフィール入力画面</h2>
      <%= form_with model:@customer, method: :patch, url: current_customer_path do |f| %>
      <div class="col-3 mt-3">
        <%= f.label :nickname, "ニックネーム", class: "form-label" %>
        <%= f.text_field :nickname, class: "form-control col-3 mt-3" %>
      </div>
      <div class="col-3 mt-3">
        <%= f.label :profile, "プロフィール", class: "form-label" %>
        <%= f.text_area :profile, class: "form-control col-5 mt-3" %>
      </div>
      <div class="col-3 mt-3">
        <%= f.label :image, "プロフィール画像", class: "form-label" %>
        <%= f.attachment_field :image, class: "form-control mt-3" %>
      </div>
      <div class="mt-3">
        <%= f.submit "登録する", class: "btn btn-info" %>
      </div>
      <% end %>
    </div>
  </div>
</div>