<%= render 'public/after_sign_in_nav', customer: current_customer %>
<div class="container">
  <div class="row">
    <%= render 'layouts/sidebar' %>
    <div class="col-9 offset-md-1">
      <%= render 'public/menue' %>
      <h2 class="col-3 mt-5">しゃべり場</h2>
      <% @comments.each do |comment| %>
      <div class="row mt-5">
        <div class="card col-10">
          <div class="card-header"><%= comment.customer.nickname %></div>
          <div class="card-body">
            <p class="card-text"><%= comment.comment %></p>
            <div class="row d-flex justify-content-end">
              <% if comment.customer_id == current_customer.id %>
                <%= link_to "編集", edit_comment_path(comment.id), class: "btn btn-primary btn-sm col-1 me-3" %>
                <%= link_to "削除", "/comments/#{comment.id}", method: :delete,  class: "btn btn-danger btn-sm col-1 me-3" %>
              <% end %>
              <button id="open" class="btn btn-info btn-sm col-1">返信</button>
            </div>
          </div>
        </div>
      </div>
      <% comment.reply_comments.each do |reply_comment| %>
      <div class="card col-7 mt-2">
        <div class="card-header"><%= reply_comment.customer.nickname %></div>
        <div class="card-body">
          <p class="card-text"><%= reply_comment.content %></p>
          <div class="row d-flex justify-content-end">
            <% if comment.customer_id == current_customer.id %>
              <%= link_to "編集", edit_comment_path(comment.id), class: "btn btn-primary btn-sm col-1 me-3" %>
              <%= link_to "削除", "/comments/#{comment.id}/reply_comments/#{reply_comment.id}", method: :delete,  class: "btn btn-danger btn-sm col-1 me-3" %>
            <% end %>
            <button id="open" class="btn btn-info btn-sm col-1">返信</button>
          </div>
        </div>
      </div>
      <% end %>
      <!--モーダルの周囲を薄暗くするマスク-->
      <div id="mask" class="hidden"></div>
      <!--モーダル-->
      <div id="modal" class="hidden">
      <%= form_with model: [comment, @reply_comment], local:true do |f| %>
        <%= f.hidden_field:comment_id, :value => comment.id %>
        <%= f.hidden_field:customer_id, :value => current_customer.id %>
        <%= f.label:content, "返信コメント", class: "form-label" %>
        <%= f.text_area:content, class: "form-control" %>
        <div id="close" class="row mt-5 d-flex justify-content-end">
          <%= f.submit "返信する", class: "btn btn-info col-2 me-2" %>
          <%= link_to "キャンセル", comments_path, class: "btn btn-primary col-2" %>
        </div>
      <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>