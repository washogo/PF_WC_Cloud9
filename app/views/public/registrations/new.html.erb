<%= render 'layouts/before_sign_in_nav' %>
<div class="container">
  <div class="row mt-5">
    <div class="col-8 offset-md-2">
      <h2>新規会員登録画面</h2>
      <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), local:true) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="field col-3 mt-3">
          <%= f.label:last_name, "姓", class:"form_label" %>
          <%= f.text_field:last_name, class:"form-control" %>
        </div>
        <div class="field col-3 mt-3">
          <%= f.label:first_name, "名", class:"form_label" %>
          <%= f.text_field:first_name, class:"form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-3 mt-3">
          <%= f.label:last_name_kana_name, "セイ", class:"form_label" %>
          <%= f.text_field:last_name_kana, class:"form-control" %>
        </div>
        <div class="field col-3 mt-3">
          <%= f.label:first_name_kana, "メイ", class:"form_label" %>
          <%= f.text_field:first_name_kana, class:"form-control" %>
        </div>
      </div>
      <div class="col-3 mt-5">
        <%= f.label :nickname, "ニックネーム", class: "form-label" %>
        <%= f.text_field :nickname, class: "form-control" %>
      </div>
      <div class="field col-3 mt-3">
        <%= f.label:postal_code, "郵便番号", class:"form_label" %>
        <%= f.text_field:postal_code, class:"form-control" %>
      </div>
      <div class="field col-6 mt-3">
        <%= f.label:address, "住所", class:"form_label" %>
        <%= f.text_field:address, class:"form-control" %>
      </div>
      <div class="field col-3 mt-3">
        <%= f.label:phone_number, "電話番号", class:"form_label"%>
        <%= f.text_field:phone_number, class:"form-control" %>
      </div>
      <div class="field col-3 mt-3">
        <%= f.label :email, "メールアドレス", class: "form-label h6"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field col-6 mt-3">
        <%= f.label :password, "パスワード", class: "form-label h6" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上にしてください)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field col-6 mt-3">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "会員登録する", class: "btn btn-info"%>
      </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
