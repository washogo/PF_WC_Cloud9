<%- if controller_name != 'sessions' %>
<div class="mt-3">
  <%= link_to "会員登録がお済みですか？", new_session_path(resource_name), class: "btn btn-warning"%><br />
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "会員登録をしていませんか？", new_registration_path(resource_name), class: "btn btn-warning" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードをお忘れのお客様", new_password_path(resource_name), class: "link-info" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider == :google_oauth2 %>
      <%= link_to "Googleでログイン", omniauth_authorize_path(resource_name, provider), method: :post, class: "btn btn-danger mt-3" %><br />
    <% end %>
  <% end %>
<% end %>
