<%= render 'public/after_sign_in_nav', customer: current_customer %>
<div class="container">
  <div class="row">
    <%= render partial: 'layouts/sidebar', locals: { categories: @categories, tags: @tags } %>
    <div class="col-9 offset-md-1">
      <%= render 'public/menu' %>
      <h2 class="mt-5">配送先編集</h2>
      <%= form_with model:@address, method: :patch, local:true do |f| %>
        <div class="col-3 mt-5">
          <%= f.label:name, "宛名", class: "form-label" %>
          <%= f.text_field:name, class: "form-control" %>
        </div>
        <div class="col-3 mt-5">
          <%= f.label:postal_code, "郵便番号", class: "form-label" %>
          <%= f.text_field:postal_code, class: "form-control" %>
        </div>
        <div class="col-3 mt-5">
          <%= f.label:address, "住所", class: "form-label" %>
          <%= f.text_field:address, class: "form-control" %>
        </div>
        <div class="row mt-5">
          <%= f.submit "編集する", class: "btn btn-info col-2 me-3" %>
          <%= link_to "キャンセル", addresses_path, class: "btn btn-primary col-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>