<%= render 'layouts/before_sign_in_nav' %>
<div class="container">
  <div class="row mt-5">
    <%= render 'layouts/sidebar' 
    <div class="col-8 offset-md-2">
      <h2>ログイン画面</h2>

      <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field col-3 mt-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field col-3 mt-3">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field col-3 mt-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "次回以降自動ログインする", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions mt-3">
          <%= f.submit "ログインする", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>


