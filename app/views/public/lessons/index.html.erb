<%= render 'public/after_sign_in_nav', customer: current_customer %>
<div class="container">
  <div class="row">
    <%= render 'layouts/sidebar' %>
    <div class="col-9 offset-md-1">
      <%= render 'public/menue' %>
      <h2 class="mt-5">講座一覧</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>講座名</th>
            <th>カテゴリー</th>
            <th>タグ</th>
            <th>受講場所</th>
            <th>期間</th>
            <th>税抜価格</th>
            <th>開講状況</th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
          <tr>
            <td>
              <%= link_to lesson_path(lesson.id), class: "link-dark" do %>
                <%= lesson.name %>
              <% end %>
            </td>
            <td><%= lesson.category.name %></td>
            <td>
              <% lesson.tags.each do |tag| %>
                <button class="btn btn-success"><%= tag.name %></button>
              <% end %>
            </td>
            <td><%= lesson.attending_style_i18n %></td>
            <td>
              <% if lesson.contract_period==0 %>
                単発
              <% else %>
                <%= lesson.contract_period %>ヶ月
              <% end %>
            </td>
            <td><%= lesson.price %>円</td>
            <td>
              <% if lesson.is_in_lecture %>
                開講中
              <% else %>
                閉講
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>