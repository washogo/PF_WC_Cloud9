<%= render 'public/after_sign_in_nav', customer: current_customer %>
<div class="container">
  <div class="row">
    <%= render partial: 'layouts/sidebar', locals: { categories: @categories, tags: @tags } %>
    <div class="col-9 offset-md-1">
      <%= render 'public/menu' %>
      <h2 class="mt-5">講座一覧</h2>
      <table class="table table-hover table-sm">
        <thead>
          <tr>
            <th>講座名</th>
            <th>カテゴリー</th>
            <th>タグ</th>
            <th>受講場所</th>
            <th>期間</th>
            <th>税抜価格</th>
            <th>開講状況</th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
          <tr>
            <td>
              <%= link_to lesson_path(lesson.id), class: "link-dark" do %>
                <%= lesson.name %>
              <% end %>
            </td>
            <td><%= lesson.category.name %></td>
            <td>
              <% lesson.tags.each do |tag| %>
                <button class="btn btn-success btn-sm m-1"><%= tag.name %></button>
              <% end %>
            </td>
            <td><%= lesson.attending_style_i18n %></td>
            <td>
              <%= contract_period(lesson.contract_period) %>
            </td>
            <td><%= lesson.price %>円</td>
            <td>
              <% if lesson.is_in_lecture %>
                開講中
              <% else %>
                閉講
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>