<div class="container">
  <div class="row m-5">
    <div class="col offset-md-4">
      <h2>パスワード変更画面</h2>
      <p>パスワードをリセットして新しいパスワードに変更します。</p>

      <%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field col-3 mt-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "メールを送信する", class: "btn btn-info" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
