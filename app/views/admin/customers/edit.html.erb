<%= render 'admin/after_sign_in_nav' %>
<div class="container">
  <div class="row mt-5">
    
    <div class="col-9 offset-md-1">
      <h2>会員情報編集画面</h2>
      <%= form_with model: @customer, url:{ controller: 'customers', action: 'update' }, method: :patch, local:true do |f| %>
      <div class="row mt-5">
        <div class="col-3">
          <%= f.label:last_name, "姓", class: "form-label" %>
          <%= f.text_field:last_name, class: "form-control" %>
        </div>
        <div class="col-3">
          <%= f.label:first_name, "名", class: "form-label" %>
          <%= f.text_field:first_name, class: "form-control" %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-3">
          <%= f.label:last_name_kana, "セイ", class: "form-label" %>
          <%= f.text_field:last_name_kana, class: "form-control" %>
        </div>
        <div class="col-3">
          <%= f.label:first_name_kana, "メイ", class: "form-label" %>
          <%= f.text_field:first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-3">
          <%= f.label:postal_code, "郵便番号", class: "form-label" %>
          <%= f.text_field:postal_code, class: "form-control" %>
        </div>
        <div class="col-7">
          <%= f.label:address, "住所", class: "form-label" %>
          <%= f.text_field:address, class: "form-control" %>
        </div>
      </div>
      <div class="col-3 mt-5">
        <%= f.label:phone_number, "電話番号", class: "form-label" %>
        <%= f.text_field:phone_number, class: "form-control" %>
      </div>
      <div class="col-3 mt-5">
        <%= f.label:email, "メールアドレス", class: "form-label" %>
        <%= f.text_field:email, class: "form-control" %>
      </div>
      <div class="col-3 mt-5">
        <%= f.label:transfer_target, "振込先", class: "form-label" %>
        <%= f.text_field:transfer_target, class: "form-control" %>
      </div>
      <div class="col-3 mt-5">
        <%= f.label:is_deleted, "会員ステータス", class: "form-check-label" %></br>
        <%= f.radio_button:is_deleted, true, class: "form-check-input" %>有効<%= f.radio_button:is_deleted, false, class: "form-check-input"%>無効
      </div>
      <div class="row mt-5">
        <%= f.submit "変更する", class: "btn btn-primary col-2 me-2" %>
        <%= link_to "一覧に戻る", admin_customers_path, class: "btn btn-info col-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>